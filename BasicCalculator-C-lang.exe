#include <stdio.h>
#include <stdlib.h>

 int
main ()
{
  
    //variables
  int oper;
  
float n1, n2, result;
  
    // program body    
    printf
    ("-----------------------------------------------------------\n\n");
  
printf ("             Welcome to your Calculator!\n\n");
  
printf ("-----------------------------------------------------------\n");
  
printf ("       Please choose one of the operations below:\n");
  
printf ("-----------------------------------------------------------\n");
  
printf ("Addition -> type [1]\n");
  
printf ("Subtraction -> type [2]\n");
  
printf ("Multiplication -> type [3]\n");
  
printf ("Division -> type [4]\n");
  
printf ("Percentage -> type [5]\n");
  
printf ("-----------------------------------------------------------\n");
  
 
printf ("Wich operation do you want to perform?\n");
  
scanf ("%d", &oper);
  
printf ("-----------------------------------------------------------\n");
  
 
  
    
if (oper == 1)
    
     {
      printf ("Please enter a number: ");	
      scanf ("%f", &n1);	
      printf ("Please enter another number: ");
      scanf ("%f", &n2);
      result = n1 + n2;
    }			
    
  else if (oper == 2)
    
    {
      printf ("Please enter a number: ");
      scanf ("%f", &n1);
      printf ("Please enter another number: ");
      scanf ("%f", &n2);
      result = n1 - n2;
    }
  
 
   else if (oper == 3)
    {
      printf ("Please enter a number: ");
      scanf ("%f", &n1);
      printf ("Please enter another number: ");
      scanf ("%f", &n2);
      result = n1 * n2;
    }
  
 
  else if (oper == 4)
    {
      printf ("Please enter a number: ");
      scanf ("%f", &n1);
      printf ("Please enter another number: ");
      scanf ("%f", &n2);
      result = n1 / n2;
    }
  
 
  else if (oper == 5)
    {
      printf ("Please enter a percentage without '%':");
      scanf ("%f", &n1);
      printf ("Please enter the number: ");
      scanf ("%f", &n2);
      result = (n1 * n2) / 100;
    }
  
 
  else
    {
      printf ("Not a valid operator! Please choose from 1 to 5.\n");
    }
  
 
printf (">>> Resolution: %.2f <<<", result);
  
   

 
}			
